<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <Component Id="FileAssociation" Directory="INSTALLFOLDER" Guid="*">
            <ProgId Id="TCLauncher.TCLPackage" Description="TCLauncher Package" Icon="ProductIcon" IconIndex="0">
                <Extension Id="tcl" ContentType="application/x-tclauncher-package">
                    <Verb Id="open" Command="Open" TargetFile="TCLauncherExe" Argument="--installPackage &quot;%1&quot;" />
                </Extension>
            </ProgId>

            <RegistryValue Root="HKCU"
                           Key="Software\T-Craft\TCLauncher"
                           Name="FileAssociation"
                           Type="integer"
                           Value="1"
                           KeyPath="yes"/>
        </Component>
    </Fragment>
</Wix>