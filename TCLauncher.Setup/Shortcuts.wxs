<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <ComponentGroup Id="Shortcuts">
            <!-- Optional Desktop Shortcut -->
            <Component Id="DesktopShortcutMain"
                       Directory="DesktopFolder"
                       Guid="*">
                <Condition><![CDATA[INSTALLDESKTOPSHORTCUT = 1]]></Condition>
                <Shortcut Id="DesktopShortcutMain"
                          Name="TCLauncher"
                          Description="!(loc.ProductDescription)"
                          Target="[INSTALLFOLDER]TCLauncher.exe"
                          Icon="ProductIcon"
                          IconIndex="0"
                          WorkingDirectory="INSTALLFOLDER" />
                <RemoveFolder Id="RemoveDesktopFolder" On="uninstall"/>
                <RegistryValue Root="HKCU"
                               Key="Software\T-Craft\TCLauncher"
                               Name="DesktopShortcut"
                               Type="integer"
                               Value="1"
                               KeyPath="yes"/>
            </Component>

            <!-- Start Menu Folder Removal -->
            <Component Id="StartMenuFolder"
                       Directory="ApplicationProgramsFolder"
                       Guid="*">
                <RemoveFolder Id="RemoveApplicationProgramsFolder" On="uninstall"/>
                <RegistryValue Root="HKCU"
                               Key="Software\T-Craft\TCLauncher"
                               Name="StartMenuShortcut"
                               Type="integer"
                               Value="1"
                               KeyPath="yes"/>
            </Component>
        </ComponentGroup>
    </Fragment>
</Wix>