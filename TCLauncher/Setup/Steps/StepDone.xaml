<UserControl
    x:Class="TCLauncher.Setup.Steps.StepDone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="clr-namespace:TCLauncher.MVVM.Animations"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:TCLauncher.Properties"
    mc:Ignorable="d">

    <b:Interaction.Behaviors>
        <animations:SlideInOutAnimation />
    </b:Interaction.Behaviors>

    <StackPanel>
        <Label
            Margin="0,0,0,10"
            Content="{x:Static p:Languages.installer_install_complete_title}"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="28" />
        <Label
            Content="{x:Static p:Languages.installer_additional_links}"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="17.5" />
        <Button
            x:Name="GitHubLinkButton"
            Margin="0,5,0,0"
            Padding="10,7.5"
            Click="GitHubLinkButton_OnClick"
            Content="{x:Static p:Languages.installer_github_repo}"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="15"
            Style="{StaticResource ModernButton}" />
        <Button
            x:Name="WebsiteLinkButton"
            Margin="0,10,0,0"
            Padding="10,7.5"
            Click="WebsiteLinkButton_OnClick"
            Content="{x:Static p:Languages.installer_visit_website}"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="15"
            Style="{StaticResource ModernButton}" />
        <Button
            x:Name="SupportLinkButton"
            Margin="0,10,0,0"
            Padding="10,7.5"
            Click="SupportLinkButton_OnClick"
            Content="{x:Static p:Languages.installer_support}"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="15"
            Style="{StaticResource ModernButton}" />
    </StackPanel>
</UserControl>
