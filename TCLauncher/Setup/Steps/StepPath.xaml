<UserControl
    x:Class="TCLauncher.Setup.Steps.StepPath"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="clr-namespace:TCLauncher.MVVM.Animations"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <b:Interaction.Behaviors>
        <animations:SlideInAnimation />
    </b:Interaction.Behaviors>

    <StackPanel>
        <Label
            Margin="0,0,0,10"
            Content="Path"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="28" />
        <Label
            Content="Set Data Path:"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="17.5" />
        <Grid Width="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="AppDataPath"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                FontFamily="{StaticResource PixelifySans}"
                FontSize="15"
                IsReadOnly="True"
                IsReadOnlyCaretVisible="False"
                Style="{StaticResource ModernTextBoxV2}" />
            <Button
                x:Name="AppDataPathBrowseBtn"
                Grid.Column="1"
                Margin="7.5,0,0,0"
                Padding="7.5"
                Click="AppDataPathBrowseBtn_OnClick"
                Content="Choose"
                FontFamily="{StaticResource PixelifySans}"
                FontSize="15"
                Style="{StaticResource ModernButton}" />
        </Grid>
        <Button
            x:Name="AppDataPathResetBtn"
            Margin="0,10,0,0"
            Padding="7.5"
            Click="AppDataPathResetBtn_OnClick"
            Content="Use Defaults"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="15"
            Style="{StaticResource ModernButton}" />
    </StackPanel>
</UserControl>
