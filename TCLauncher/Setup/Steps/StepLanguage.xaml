<UserControl
    x:Class="TCLauncher.Setup.Steps.StepLanguage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="clr-namespace:TCLauncher.MVVM.Animations"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:TCLauncher.Properties"
    Loaded="StepLanguage_OnLoaded"
    mc:Ignorable="d">

    <b:Interaction.Behaviors>
        <animations:SlideInAnimation />
    </b:Interaction.Behaviors>

    <StackPanel>
        <Label
            Margin="0,0,0,10"
            Content="{x:Static p:Languages.language}"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="28" />
        <Label
            Content="{x:Static p:Languages.select_language}"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="17.5" />
        <ComboBox
            x:Name="LanguageSelector"
            FontFamily="{StaticResource PixelifySans}"
            FontSize="12.5"
            SelectionChanged="LanguageSelector_OnSelectionChanged"
            Style="{StaticResource ModernComboBox}">
            <ComboBoxItem Content="English" Tag="en" />
            <ComboBoxItem Content="Deutsch" Tag="de" />
            <ComboBoxItem Content="Français" Tag="fr" />
        </ComboBox>
    </StackPanel>
</UserControl>
