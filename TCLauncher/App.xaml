<Application
    x:Class="TCLauncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TCLauncher"
    xmlns:view="clr-namespace:TCLauncher.MVVM.View"
    xmlns:viewModel="clr-namespace:TCLauncher.MVVM.ViewModel"
    ShutdownMode="OnLastWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml" />
                <ResourceDictionary Source="Theme/TextBoxTheme.xaml" />
                <ResourceDictionary Source="Theme/WindowControlButtonTheme.xaml" />
                <ResourceDictionary Source="Theme/ModernButtonTheme.xaml" />
                <ResourceDictionary Source="Theme/ModernToolTipTheme.xaml" />
                <ResourceDictionary Source="Theme/ModernScrollbarTheme.xaml" />
                <ResourceDictionary Source="Theme/ModernComboBoxTheme.xaml" />
                <ResourceDictionary Source="Theme/ModernCheckBoxTheme.xaml" />
                <ResourceDictionary Source="Theme/ButtonComboBoxTheme.xaml" />
                <ResourceDictionary Source="Theme/SelectableLabel.xaml" />
                <ResourceDictionary Source="Theme/GlobalTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/BusyIndicator;component/Theme/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ServerListViewModel}">
                <view:ServerListView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:SettingsViewModel}">
                <view:SettingsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:StatusViewModel}">
                <view:StatusView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:AccountListViewModel}">
                <view:AccountListView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:AccountOptionsViewModel}">
                <view:AccountOptionsView />
            </DataTemplate>

            <FontFamily x:Key="FaRegular">Assets/Fonts/#Font Awesome 6 Free Regular</FontFamily>
            <FontFamily x:Key="FaSolid">Assets/Fonts/#Font Awesome 6 Free Solid</FontFamily>
            <FontFamily x:Key="FaBrands">Assets/Fonts/#Font Awesome 6 Brands Regular</FontFamily>
            <FontFamily x:Key="PixelifySans">Assets/Fonts/#Pixelify Sans Regular</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
