<Window
    x:Class="TCLauncher.MVVM.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
    xmlns:controls="clr-namespace:TCLauncher.MVVM.Controls"
    xmlns:converters="clr-namespace:TCLauncher.MVVM.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TCLauncher.MVVM.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:TCLauncher.Properties"
    xmlns:viewModel="clr-namespace:TCLauncher.MVVM.ViewModel"
    Title="TCLauncher"
    Width="915"
    Height="600"
    MinWidth="915"
    MinHeight="600"
    MaxWidth="1200"
    MaxHeight="800"
    Activated="MainWindow_OnActivated"
    Background="#737c88"
    Deactivated="MainWindow_OnDeactivated"
    Foreground="White"
    Icon="/Assets/Images/logo.png"
    Loaded="Window_Loaded"
    StateChanged="MainWindow_OnStateChanged"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converters:ObjectTypeToBooleanConverter x:Key="ObjectTypeToBooleanConverter" />
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
            x:Name="WindowChrome"
            CaptionHeight="0"
            CornerRadius="15"
            GlassFrameThickness="0"
            ResizeBorderThickness="4" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="MainFrame">
        <!--  Layer 0: ThemeProvider  -->
        <!--  Can be found under Window.*  -->

        <!--  Layer 1: FallbackGrid -> Fallback View if no other Component is loaded  -->
        <Grid x:Name="FallbackGrid" ZIndex="-1">
            <Border
                Background="#1d2633"
                BorderBrush="Transparent"
                BorderThickness="1"
                CornerRadius="8">
                <busyIndicator:BusyMask
                    x:Name="BusyIndicator"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BusyContent="{x:Static p:Languages.busy_interface_loading_text}"
                    FontSize="20"
                    IndicatorType="Escalade"
                    IsBusy="True"
                    IsBusyAtStartup="True" />
            </Border>
        </Grid>

        <!--  Layer 2: LoadingGrid -> Loading Animation  -->
        <Grid
            x:Name="loadingGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#1d2633"
            MouseLeftButtonDown="TopDrag_OnMouseLeftButtonDown"
            Visibility="Collapsed">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="99">
                <Image
                    x:Name="loadingImg"
                    Width="160"
                    MouseDown="loadingImg_MouseDown"
                    Source="/Assets/Images/logo.png" />
                <Label
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    Content="{x:Static p:Languages.starting_text}"
                    FontFamily="{StaticResource PixelifySans}"
                    FontSize="25"
                    Foreground="#b2b9cc" />
            </StackPanel>
            <!--<MediaElement
                x:Name="BgMediaElement"
                LoadedBehavior="Manual"
                MediaEnded="BgMediaElement_OnMediaEnded"
                Source="pack://siteoforigin:,,,/Assets/Videos/bganim.mp4"
                Stretch="UniformToFill"
                UnloadedBehavior="Manual" />-->
        </Grid>

        <!--  Layer 3: MainBorder -> Main Window Content  -->
        <Border
            x:Name="mainBorder"
            Background="#1d2633"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="23" />
                    <ColumnDefinition Width="53" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <Border
                    x:Name="topDrag"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Panel.ZIndex="-1"
                    Background="Transparent"
                    MouseLeftButtonDown="TopDrag_OnMouseLeftButtonDown">
                    <Border.ContextMenu>
                        <ContextMenu
                            Margin="0"
                            HorizontalOffset="0"
                            Placement="MousePoint"
                            VerticalOffset="0">
                            <MenuItem Click="minimizeBtn_Click" Header="{x:Static p:Languages.minimize_menu_item_text}" />
                            <MenuItem
                                Click="closeBtn_Click"
                                Header="{x:Static p:Languages.close_menu_item_text}"
                                InputGestureText="ALT + F4" />

                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>

                <Image
                    Grid.Column="1" Grid.Row="1"
                    x:Name="logo"
                    Margin="5"
                    HorizontalAlignment="Center"
                    MouseDown="Logo_MouseDown"
                    Source="/Assets/Images/logo.png" />

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,10,0,0">
                    <Button
                        x:Name="homeBtn"
                        Padding="12,12"
                        HorizontalAlignment="Center"
                        Command="{Binding HomeViewCommand}">
                        <Button.Content>
                            <controls:Icon
                                FontFamily="{StaticResource FaSolid}"
                                Identifier="house"
                                Unicode="f015" />
                        </Button.Content>
                        <Button.Style>
                            <Style BasedOn="{StaticResource ModernButton}" TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentView, Converter={StaticResource ObjectTypeToBooleanConverter}, ConverterParameter={x:Type viewModel:HomeViewModel}}" Value="True">
                                        <Setter Property="Background" Value="#171e29" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button
                        x:Name="serverBtn"
                        Padding="12,12"
                        Margin="0, 5, 0, 0"
                        HorizontalAlignment="Center"
                        Command="{Binding ServerListViewCommand}">
                        <Button.Content>
                            <controls:Icon
                                FontFamily="{StaticResource FaSolid}"
                                Identifier="gamepad"
                                Unicode="f11b" />
                        </Button.Content>
                        <Button.Style>
                            <Style BasedOn="{StaticResource ModernButton}" TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentView, Converter={StaticResource ObjectTypeToBooleanConverter}, ConverterParameter={x:Type viewModel:ServerListViewModel}}" Value="True">
                                        <Setter Property="Background" Value="#171e29" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button
                        x:Name="SettingsBtn"
                        Padding="12,12"
                        Margin="0, 5, 0, 0"
                        HorizontalAlignment="Center"
                        Command="{Binding SettingsViewCommand}">
                        <Button.Content>
                            <controls:Icon
                                FontFamily="{StaticResource FaSolid}"
                                Identifier="gear"
                                Unicode="f013" />
                        </Button.Content>
                        <Button.Style>
                            <Style BasedOn="{StaticResource ModernButton}" TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentView, Converter={StaticResource ObjectTypeToBooleanConverter}, ConverterParameter={x:Type viewModel:SettingsViewModel}}" Value="True">
                                        <Setter Property="Background" Value="#171e29" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!--<RadioButton
                        x:Name="settingsBtn"
                        Command="{Binding SettingsViewCommand}"
                        Content="Einstellungen"
                        Style="{StaticResource MenuButtonTheme}" />-->
                    <!--<RadioButton
                        x:Name="statusBtn"
                        Command="{Binding StatusViewCommand}"
                        Content="{x:Static p:Languages.info_content_text}">
                        <RadioButton.Style>
                            <Style BasedOn="{StaticResource MenuButtonTheme}" TargetType="RadioButton">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentView, Converter={StaticResource ObjectTypeToBooleanConverter}, ConverterParameter={x:Type viewModel:StatusViewModel}}" Value="True">
                                        <Setter Property="IsChecked" Value="True" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RadioButton.Style>
                    </RadioButton>-->
                </StackPanel>
                <Grid Grid.Row="1" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Orientation="Horizontal">

                        <Button
                            x:Name="AccountListButton"
                            Padding="0"
                            Background="Transparent"
                            Click="AccountListButton_OnClick">
                            <Button.Style>
                                <Style BasedOn="{StaticResource ModernButtonLight}" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentView, Converter={StaticResource ObjectTypeToBooleanConverter}, ConverterParameter={x:Type viewModel:AccountListViewModel}}" Value="True">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border
                                                            x:Name="border"
                                                            Margin="{TemplateBinding Margin}"
                                                            Padding="{TemplateBinding Padding}"
                                                            Background="{TemplateBinding Background}">
                                                            <Border.Effect>
                                                                <DropShadowEffect
                                                                    Color="#B2B9CC"
                                                                    BlurRadius="20"
                                                                    ShadowDepth="0"
                                                                    Opacity="0.9" />
                                                            </Border.Effect>
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Border>

                                                        <ControlTemplate.Triggers>
                                                            <!-- Hover glow -->
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect
                                                                            Color="#66B2B9CC"
                                                                            BlurRadius="20"
                                                                            ShadowDepth="0"
                                                                            Opacity="0.9" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>

                                                            <!-- Pressed state (optional) -->
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="border" Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect
                                                                            Color="#AAB2B9CC"
                                                                            BlurRadius="20"
                                                                            ShadowDepth="0"
                                                                            Opacity="0.9" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Content>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Fallback  -->
                                    <Image
                                        Grid.Column="0"
                                        Width="24"
                                        Height="24"
                                        Margin="0,0,10,0"
                                        Panel.ZIndex="-1"
                                        Source="/Assets/Images/steve.png" />
                                    <Image
                                        x:Name="AccountManagerBtnPicture"
                                        Grid.Column="0"
                                        Width="24"
                                        Height="24"
                                        Margin="0,0,10,0" />
                                    <TextBlock
                                        x:Name="AccountManagerBtnName"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{x:Static p:Languages.not_logged_text}" />
                                </Grid>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <Border
                        x:Name="ButtonWindowControlsSpacer"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="108"
                        Height="34"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                </Grid>

                <ContentControl
                    x:Name="FrameView"
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="15"
                    Content="{Binding CurrentView}"
                    Focusable="False" />
            </Grid>
        </Border>

        <!--  Layer 5: WindowControls  -->
        <Border
            Margin="0,19,21,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#DD1D2633"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="minimizeBtn"
                    Width="34"
                    Height="34"
                    Click="minimizeBtn_Click"
                    Style="{StaticResource WindowControlButton}">
                    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Canvas Width="24" Height="24">
                            <Path Data="M19,11 L5,11 A1,1,0,0,0,5,13 L19,13 A1,1,0,0,0,19 11 Z" Fill="#FFFFFF" />
                        </Canvas>
                    </Viewbox>

                </Button>
                <Button
                    x:Name="closeBtn"
                    Height="34"
                    Click="closeBtn_Click"
                    Style="{StaticResource WindowControlButton}">
                    <Button.Content>
                        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Canvas Width="24" Height="24">
                                <Path Data="M13.41,12 L19.71,5.71 A1,1,0,1,0,18.29,4.29 L12,10.59 L5.71,4.29 A1,1,0,0,0,4.29,5.71 L10.59,12 L4.29,18.29 A1,1,0,0,0,5.71,19.71 L12,13.41 L18.29,19.71 A1,1,0,0,0,19.71 18.29 Z" Fill="#FFFFFF" />
                            </Canvas>
                        </Viewbox>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
