<UserControl
    x:Class="TCLauncher.MVVM.View.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="clr-namespace:TCLauncher.MVVM.Animations"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:TCLauncher.MVVM.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:TCLauncher.Properties"
    xmlns:viewModel="clr-namespace:TCLauncher.MVVM.ViewModel"
    d:Background="#1d2633"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModel:SettingsViewModel />
    </UserControl.DataContext>

    <b:Interaction.Behaviors>
        <animations:SlideInOutAnimation />
    </b:Interaction.Behaviors>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Left"
                FontSize="28"
                Text="{x:Static p:Languages.settings_text}" />
            <Label Content="{x:Static p:Languages.startup_behavior_label_text}" />
            <ComboBox
                x:Name="Behaviour"
                SelectionChanged="Behaviour_SelectionChanged"
                Style="{StaticResource ModernComboBox}">
                <ComboBoxItem Content="{x:Static p:Languages.keep_open_text}" Tag="0" />
                <ComboBoxItem Content="{x:Static p:Languages.minimize_text}" Tag="1" />
                <ComboBoxItem Content="{x:Static p:Languages.close_text}" Tag="2" />
            </ComboBox>
            <Label Content="{x:Static p:Languages.multi_instances_text}" />
            <ComboBox
                x:Name="MultiInstances"
                SelectionChanged="MultiInstances_OnSelectionChanged"
                Style="{StaticResource ModernComboBox}">
                <ComboBoxItem Content="{x:Static p:Languages.auto_detect_text}" Tag="0" />
                <ComboBoxItem Content="{x:Static p:Languages.forbid_text}" Tag="1" />
                <ComboBoxItem Content="{x:Static p:Languages.allow_text}" Tag="2" />
            </ComboBox>
            <Label Content="{x:Static p:Languages.sandbox_level_label_text}" />
            <ComboBox
                x:Name="SandboxLevel"
                SelectionChanged="SandboxLevel_OnSelectionChanged"
                Style="{StaticResource ModernComboBox}">
                <ComboBoxItem Content="{x:Static p:Languages.standard_text}" Tag="0" />
                <ComboBoxItem Content="{x:Static p:Languages.strict_text}" Tag="1" />
            </ComboBox>
            <Label Content="{x:Static p:Languages.language}" />
            <ComboBox
                x:Name="LanguageSelector"
                SelectionChanged="LanguageSelector_OnSelectionChanged"
                Style="{StaticResource ModernComboBox}">
                <ComboBoxItem Content="English" Tag="en" />
                <ComboBoxItem Content="Deutsch" Tag="de" />
                <ComboBoxItem Content="Français" Tag="fr" />
            </ComboBox>
            <controls:HorizontalSeparator Margin="0,10,0,0" />
            <Label Content="{x:Static p:Languages.custom_appdata_path_label_text}" />
            <TextBox
                x:Name="AppDataPath"
                MinWidth="100"
                HorizontalAlignment="Stretch"
                Style="{StaticResource ModernTextBoxV2}" />
            <Button
                x:Name="AppDataPathBtn"
                Margin="0,7.5,0,0"
                Padding="7.5"
                Click="AppDataPathBtn_OnClick"
                Content="{x:Static p:Languages.apply_button_text}"
                Style="{StaticResource ModernButton}" />

            <controls:HorizontalSeparator Margin="0,10,0,0" />
            <Button
                x:Name="updateBtn"
                Margin="0,7.5,0,0"
                Padding="7.5"
                Click="updateBtn_Click"
                Content="{x:Static p:Languages.search_for_updates_text}"
                Style="{StaticResource ModernButton}" />
            <Button
                x:Name="codeBtn"
                Margin="0,7.5,0,0"
                Padding="5"
                Click="codeBtn_Click"
                Content="{x:Static p:Languages.open_code_editor_text}"
                Style="{StaticResource ModernButton}" />
            <controls:HorizontalSeparator Margin="0,10,0,0" />
            <Button
                x:Name="resetSettBtn"
                Margin="0,7.5,0,0"
                Padding="5"
                Click="resetSettBtn_Click"
                Content="{x:Static p:Languages.reset_local_settings_text}"
                Style="{StaticResource ModernButton}" />
            <Button
                x:Name="resetDataBtn"
                Margin="0,7.5,0,0"
                Padding="5"
                Click="resetDataBtn_Click"
                Content="{x:Static p:Languages.reset_tcl_data_text}"
                Style="{StaticResource ModernButton}" />
            <Button
                x:Name="hostBtn"
                Margin="0,7.5,0,0"
                Padding="5"
                Click="HostBtn_OnClick"
                Content="{x:Static p:Languages.start_debug_server_text}"
                Style="{StaticResource ModernButton}"
                Tag="0" />
            <Button
                x:Name="ReSetupBtn"
                Margin="0,7.5,0,0"
                Padding="5"
                Click="ReSetupBtn_OnClick"
                Content="{x:Static p:Languages.re_setup_text}"
                Style="{StaticResource ModernButton}"
                Tag="0" />
            <TextBlock
                x:Name="assemblyVersion"
                Margin="0,10,0,0"
                Text="{x:Static p:Languages.version_text}" />
            <TextBlock
                x:Name="frameworkVersion"
                Margin="0,10,0,0"
                Text="{x:Static p:Languages.wpf_on_framework_text}" />
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock Text="UI Language: " />
                <TextBlock Text="{x:Static p:Languages.id}" />
            </StackPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock Text="Copyright © T-Craft " />
                <TextBlock x:Name="CopyrightCompilationYear" Text="" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
