<UserControl
    x:Class="TCLauncher.MVVM.View.AccountOptionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="clr-namespace:TCLauncher.MVVM.Animations"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:TCLauncher.MVVM.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TCLauncher.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <b:Interaction.Behaviors>
        <animations:SlideInOutAnimation />
    </b:Interaction.Behaviors>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Label
                Margin="0,0,0,10"
                Content="AccountOptions (Beta)"
                FontSize="28" />

            <controls:HorizontalSeparator />
            <TextBlock Text="Name" />
            <TextBlock x:Name="UserName" />
            <controls:HorizontalSeparator />
            <TextBlock Text="MicrosoftName" />
            <TextBlock x:Name="UserMicrosoftName" />
            <controls:HorizontalSeparator />
            <TextBlock Text="UUIDs" />
            <TextBlock x:Name="UserUuids" />
            <controls:HorizontalSeparator />
            <TextBlock Text="Skin" />
            <Image x:Name="UserSkin" Width="250" />
            <controls:HorizontalSeparator />
            <TextBlock Text="Privileges" />
            <TextBlock x:Name="UserPrivileges" />
            <controls:HorizontalSeparator />
            <TextBlock Text="ProfanityFilter" />
            <CheckBox x:Name="UserProfanityFilter" IsEnabled="False" />
            <controls:HorizontalSeparator />
            <TextBlock Text="OwnershipValid" />
            <CheckBox x:Name="UserOwnershipValid" IsEnabled="False" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
